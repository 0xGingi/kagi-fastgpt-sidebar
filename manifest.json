{
  "manifest_version": 3,
  "name": "Kagi FastGPT Sidebar",
  "version": "1.1.2",
  "description": "Context-aware sidebar using Kagi FastGPT API to answer questions about web pages and general queries",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "kagi-fastgpt@0xgingi.xyz"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://kagi.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Toggle Kagi FastGPT Sidebar",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "Toggle Kagi FastGPT Sidebar"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 